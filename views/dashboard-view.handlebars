<div class="page-content bg-light">
   <h1 class="display-1 d-block mx-auto my-5 w-75">Hi, {{data.user.name}}!</h1>
   <div class="w-75 mx-auto">
      <a href="/user/settings/{{data.user.id}}"><button class="btn btn-dark" style="width: 150px; float: right">Account
            settings</button></a>
      <form id="create-post-form">
         <div class="mb-3 w-100">
            <label for="title" class="form-label display-5 mb-5">Create new post</label>
            <input type="text" class="form-control" id="postTitle" placeholder="Post title">
         </div>
         <div class="mb-3 w-100">
            <textarea class="form-control" id="postContent" rows="10" placeholder="Write your heart out..."></textarea>
         </div>
         <button class="btn btn-primary" style="width: 100px; float: right" type="submit">Post!</button>
      </form>
      <script src="../assets/scripts/dashboard-view.js" type="text/javascript"></script>
   </div>
   <h2 class="display-5 w-75 my-5 mx-auto">My posts</h2>
   <div class="post-container w-75 mx-auto my-4">
      <div class="container px-0">
         {{#each data.posts as |post|}}
         {{>dashboard-post-preview arg=post}}
         {{/each}}
      </div>
   </div>
</div>